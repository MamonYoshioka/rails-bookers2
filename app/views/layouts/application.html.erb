<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/97b01a7c97.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!--最後に実装する-->
    <%#= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <!--ログイン後のホーム画面-->
                <li class="nav-link text-light">
                  <%= link_to user_path(current_user.id) do %>
                    <i class="fa-solid fa-house" style="color: #51261f;"></i> Home
                  <% end %>
                </li>

                <!--ログイン後のユーザーの一覧-->
                <li class="nav-link text-light">
                  <%= link_to users_path do %>
                    <i class="fa-solid fa-users"></i> Users
                  <% end %>
                </li>

                <!--ログイン後のBooksの一覧-->
                <li class="nav-link text-light">
                  <%= link_to books_path do %>
                    <i class="fa-solid fa-book-open"></i> Books
                  <% end %>
                </li>

                <!--ログアウト-->
                <li class="nav-link text-light">
                  <%= link_to destroy_user_session_path, method: :delete  do %>
                    <i class="fa-solid fa-right-from-bracket"></i> Log out
                  <% end %>
                </li>
              <% else %>
                <!--Home画面の表示-->
                <li class="nav-link text-light">
                  <%= link_to 'Home' %>
                </li>

                <!--About画面の表示-->
                <li class="nav-link text-light">
                  <%= link_to 'About', about_path%>
                </li>

                <li class="nav-link text-light">
                  <%= link_to 'ログイン', new_user_session_path %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to '新規登録', new_user_registration_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <div>
        <%= flash[:notice] %>
        <%= yield %>
      </div>
    </main>

  </body>
</html>
