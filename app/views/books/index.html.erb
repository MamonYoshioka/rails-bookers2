<div class="container">
  <!--varidation-->
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <br>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <!--ユーザーの詳細画面-->
      <%= render 'users/user_info', user: current_user %>

      <!--新規投稿画面-->
      <h2 class="mt-3">New book</h2>
      <%= render partial: 'form' %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

       <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body%></td>
          </tr>
        </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>










