<!--登録-->
<%= form_with model:@book do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :opinion %><br>
    <%= form.text_area :body %>
  </div>

  <div class="form-group">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>





