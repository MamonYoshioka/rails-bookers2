<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザーの詳細画面-->
      <%= render 'user_info', user: @user %>

      <div class="row">
        <%= link_to  edit_user_path, class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-pen">プロフィール編集</i>
        <% end %>
      </div>

      <!--新規投稿画面-->
      <h2 class="mt-3">New book</h2>
      　<%= render 'books/form', book: @book %>
    </div>

    <div class="col-md-8">
      <!--ユーザーが投稿した内容の一覧-->
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <% @user.books.each do |book|%>
        <tbody>
          <tr>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body%></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>





